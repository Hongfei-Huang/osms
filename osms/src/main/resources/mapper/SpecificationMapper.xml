<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisplus.mapper.SpecificationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.mybatisplus.model.domain.Specification">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="product_id" property="productId" />
        <result column="img" property="img" />
        <result column="size" property="size" />
        <result column="price" property="price" />
        <result column="stock" property="stock" />
    </resultMap>
    <update id="updateByPid">
        update osms_specification
        <set>
            <if test="size!=null and size!=''">
                ,specification_size = #{size}
            </if>
            <if test="price!=null">
                ,specification_price = #{price}
            </if>
            <if test="stock!=null">
                ,specification_stock = #{stock}
            </if>
        </set>
        where specification_product_id = #{id}
    </update>
    <update id="updateSpecificationStock">
        update osms_specification set stock = stock-#{num} where id=#{specification_id}
    </update>
    <select id="getTotalStockByPid" resultType="java.lang.Integer">
    select SUM(stock) as totalnum from osms_specification
    group by osms_specification.product_id having osms_specification.product_id=#{id};
    </select>
</mapper>
